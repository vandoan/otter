<!DOCTYPE html>
<html>
<head>

  <title>Otter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar navbar-inverse  navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#">VANDOONA</a>
          <div class="nav-collapse">
            <ul class="nav">
              <li><%= link_to "All Statuses", feed_path %></li>
              <li><%= link_to "Contact Us" %></li>
              <li><%= link_to "Cart" %></li>
            </ul>
          </div> 
          <ul class="nav pull-right"> 
            <% if user_signed_in? %> 
               <%= link_to current_user.full_name %>  <br /> 
                  
                  <%= link_to 'Edit profile', edit_path, :class => 'navbar-link, logInLogOut' %> |
                  <%= link_to "Logout", logout_path, :class => 'navbar-link, logInLogOut'  %>
            <% else %> 
                  <%= link_to "Register", register_path %> |
                  <%= link_to "Log in", login_path %>   

              <% end %> 
          </ul> 
      </div>
    </div>
  </div>


     <div class=" container">
      <% flash.each do |type, message| %> 
        <div class="alert <%= flash_class(type) %>"> 
          <button class="close" data-dismiss="alert">x</button> 
          <%= message %>
        </div>  
      <% end %>




  <%= yield %>
</div> 
</body>
</html>
